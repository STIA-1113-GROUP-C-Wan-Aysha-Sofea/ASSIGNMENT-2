package assignment;

import java.util.Scanner;


public class Laptop2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan=new Scanner(System.in);
		
		//amount of laptop from various group
		int groupA = 50;
		int groupB = 45;
		int groupC = 40;
		int groupD = 35;
		int groupE = 30;
		
		//old laptop information
		double purchase_price;
		double total_price0,total_price1,total_price2,total_price3,total_price4;
		double salvage_value0,salvage_value1,salvage_value2,salvage_value3,salvage_value4;
		double year;
		double depreciation;
		double value0,value1,value2,value3,value4;
		
		//new laptop information
		int newlaptop;
		double pricelaptop;
		double totalprice;
		
		//Instalment and Deposit with interest
		double deposit;
		double receivable;
		int instalperiod;
		double instalment;
		
		//Cashback
		int duration;
		int cashback;
		double penalty;
		double money;
		
		
		System.out.println("*****==WELCOME TO THE DEPRECIATION SYSTEM!!==*******");
		System.out.println();
		
		
		System.out.println("————————————————————————————————————————————————————————————————————————————");
		System.out.println("----------------------------------GROUP A-----------------------------------");
		System.out.println("————————————————————————————————————————————————————————————————————————————");
		
		System.out.println("Enter the initial purchase price of laptop(RM): ");
		purchase_price = scan.nextDouble();
		
		System.out.println("Enter the number of years: ");
		year = scan.nextDouble();
		
		System.out.println("Enter depreciation percentage(%): ");
		depreciation = scan.nextDouble();
		value0 = purchase_price;
		
		for(int i=1; i<=year; i++) {
			value0=((100-depreciation)*value0)/100;
		}
		total_price0 = purchase_price * groupA;
		salvage_value0 = value0 * groupA;
		
		System.out.printf("\nBefore depreciation: RM%.2f\n", total_price0);
		System.out.printf("After depreciation : RM%.2f\n",salvage_value0);
		
		
		System.out.println("\n————————————————————————————————————————————————————————————————————————————");
		System.out.println("----------------------------------GROUP B-----------------------------------");
		System.out.println("————————————————————————————————————————————————————————————————————————————");
		
		System.out.println("Enter the initial purchase price of laptop: ");
		purchase_price = scan.nextDouble();
		
		System.out.println("Enter the number of years: ");
