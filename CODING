package assignment;
import java.util.Scanner;
public class Ass {
	 public static void line(){
	 int line=1;
	 while(line<=80){
	 System.out.printf("%c",45);
	 line++; 
	        }
	 }
	 public static void dot(){
		 int dot=1;
		 while(dot<=80){
		 System.out.print("-");
		 dot++; 
		        }
	 }
